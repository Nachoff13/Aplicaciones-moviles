<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".WelcomeActivity">

    <TextView
        android:id="@+id/tvWelcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/tvWelcomeMessage"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rgPlatform"
        app:layout_constraintVertical_bias="0.3" />

    <ImageView
        android:id="@+id/imgPlatformLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeMessage"
        app:layout_constraintBottom_toTopOf="@id/rgPlatform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/desc_platform_logo" />

    <RadioGroup
        android:id="@+id/rgPlatform"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/imgPlatformLogo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <RadioButton
            android:id="@+id/rbAndroid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rbAndroid"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/rbIOS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rbIOS"
            android:textColor="@color/white" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/cbOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cbOther"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/rgPlatform"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp" />

    <EditText
        android:id="@+id/etOtherPreference"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/etOtherPreference"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:visibility="gone"
        android:padding="18dp"
        android:layout_margin="20dp"
        android:inputType="text"
        android:autofillHints="username"
        app:layout_constraintTop_toBottomOf="@id/cbOther"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
